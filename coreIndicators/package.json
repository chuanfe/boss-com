          "rate_level": "green"
        },
        {
          "name": "周活跃数",
          "value": 5326784,
          "rate": -0.34,
          "rate_level": "red"
        },
        {
          "name": "月活跃数",
          "value": 7326784,
          "rate": 0.54
        }
      ]
    }
  }
}