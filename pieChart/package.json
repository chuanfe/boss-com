                  },
                  {
                    "name": "arial",
                    "value": "arial"
                  },
                  {
                    "name": "sans-serif",
                    "value": "sans-serif"
                  }
                ],
                "default": "Microsoft YaHei"
              },
              "fontSize": {
                "name": "字号",
                "type": "number",
                "default": 14
              },
              "color": {
                "name": "颜色",
                "type": "color",
                "default": "auto"
              }
            }
          },
          "labelLine": {
            "name": "线段设置",
            "type": "group",
            "children": {
              "show": {
                "name": "显示",
                "type": "boolean",
                "default": true
              },
              "length": {
                "name": "一线段长度",
                "type": "number",
                "default": 20
              },
              "length2": {
                "name": "二线段长度",
                "type": "number",
                "default": 10
              },
              "smooth": {
                "name": "平滑",
                "type": "boolean",
                "default": false
              }
            }
          },
          "color": {
            "name": "色系添加",
            "type": "array",
            "default": [
              {
                "color": "#c4ccd3"
              }
            ],
            "child": {
              "type": "object",
              "name": "色彩<%= i+1 %>",
              "child": {
                "color": {
                  "name": "颜色",
                  "type": "color",
                  "default": "#c4ccd3"
                }
              }
            }
          }
        }
      },
      "animation": {
        "name": "动画",
        "type": "boolean",
        "default": true
      },
      "animationThreshold": {
        "name": "动画阈值",
        "type": "number",
        "default": 2000
      },
      "animationDuration": {
        "name": "动画时长",
        "type": "number",
        "default": 1000
      },
      "animationEasing": {
        "name": "缓动效果",
        "type": "search",
        "options": [
          {
            "name": "linear",
            "value": "linear"
          },
          {
            "name": "quadraticIn",
            "value": "quadraticIn"
          },
          {
            "name": "quadraticOut",
