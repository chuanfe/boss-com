          {
            "name": "cubicOut",
            "value": "cubicOut"
          },
          {
            "name": "cubicInOut",
            "value": "cubicInOut"
          },
          {
            "name": "quarticIn",
            "value": "quarticIn"
          },
          {
            "name": "quarticOut",
            "value": "quarticOut"
          },
          {
            "name": "quarticInOut",
            "value": "quarticInOut"
          },
          {
            "name": "sinusoidalIn",
            "value": "sinusoidalIn"
          },
          {
            "name": "sinusoidalOut",
            "value": "sinusoidalOut"
          },
          {
            "name": "sinusoidalInOut",
            "value": "sinusoidalInOut"
          },
          {
            "name": "exponentialIn",
            "value": "exponentialIn"
          },
          {
            "name": "exponentialOut",
            "value": "exponentialOut"
          },
          {
            "name": "exponentialInOut",
            "value": "exponentialInOut"
          },
          {
            "name": "circularIn",
            "value": "circularIn"
          }
