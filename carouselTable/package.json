    "events": {
      "row-clicked": {
        "description": "单行点击响应事件",
        "fields": {
          "area": {
            "description": "地区"
          },
          "pv": {
            "description": "流量"
          },
          "attribute": {
            "description": "用户行为特征"
          }
        }
      }
    }
  }
