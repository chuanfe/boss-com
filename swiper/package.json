{
  "name": "@namespace/swiper",
  "version": "0.0.1",
  "dependencies": {
    "bcore": "0.0.18",
    "jquery": "2.1.4",
    "lodash": "4.6.1",
    "swiper": "4.5.0"
  },
  "datav": {
    "cn_name": "轮播图",
    "level": 0,
    "icon": "http://localhost:6721/resource/imgs/TB1c67AcjfguuRjSspkXXXchpXa-270-160.png",
    "protocol": 2,
    "type": [
      "media_image"
    ],
    "view": {
      "width": "600",
      "height": "338",
      "minWidth": "200",
      "minHeight": "100",
      "z-index": 110
    },
    "apis": {
      "source": {
        "handler": "render",
        "description": "接口描述",
        "hideStatic": true,
        "fields": {
          "url": {
            "type": "string",
            "description": "图片地址"
          },
          "description": {
            "type": "string",
            "description": "图片描述",
            "optional": true
          }
        }
      }
    },
    "config": {
      "imgconfig": {
        "type": "group",
        "name": "全局",
        "fold": true,
        "children": {
          "fillType": {
            "type": "radio",
            "name": "填充方式",
            "list": [
              {
                "name": "原始尺寸",
                "value": 1
              },
              {
                "name": "横向铺满容器",
                "value": 2
              },
              {
                "name": "纵向铺满容器",
                "value": 3
              },
              {
                "name": "按比例铺满容器",
                "value": 4
              },
              {
                "name": "拉伸铺满容器",
                "value": 5
              }
            ],
            "default": 5
          },
          "dot": {
            "name": "显示底部导航",
            "type": "boolean",
            "default": true
          },
          "pagination": {
            "name": "显示翻页按钮",
            "type": "boolean",
            "default": true
          }
        }
      },
      "animate": {
        "type": "group",
        "name": "动画",
        "fold": true,
        "children": {
          "interval": {
            "type": "number",
            "name": "停顿(ms)",
            "default": 2500
          },
          "speed": {
            "type": "number",
            "name": "速度(ms)",
            "default": 500
          },
          "direction": {
            "type": "select",
            "name": "特效",
            "options": [
              {
                "name": "水平滚动",
                "value": "horizontal"
              },
              {
                "name": "垂直滚动",
                "value": "vertical"
              }
            ],
            "default": "horizontal"
          }
        }
      },
      "description": {
        "handler": "updateDescription",
        "type": "group",
        "name": "描述",
        "fold": true,
        "children": {
          "show": {
            "type": "boolean",
            "default": true,
            "name": "显示",
            "handler": "updateDescription"
          },
          "background": {
            "type": "color",
            "default": "rgba(0, 0, 0, 0.7)",
            "name": "文字背景颜色",
            "show": [
              [
                "show",
                "$eq",
                true
              ]
            ],
            "handler": "updateDescription"
          },
          "fontSize": {
            "type": "number",
            "name": "字号",
            "default": 14,
            "min": 12,
            "max": 72,
            "range": [
              10,
              72
            ]
          },
          "color": {
            "type": "color",
            "default": "#ffffff",
            "name": "文字颜色",
            "show": [
              [
                "show",
                "$eq",
                true
              ]
            ],
            "handler": "updateDescription"
          },
         
          "fontWeight": {
            "name": "字体粗细",
            "type": "select",
            "default": "normal",
            "options": [
              "normal",
              "bold",
              "bolder",
              "lighter",
              100,
              200,
              300,
              400,
              500,
              600,
              700,
              800,
              900
            ],
            "show": [
              [
                "show",
                "$eq",
                true
              ]
            ],
            "handler": "updateDescription"
          },
          "align": {
            "type": "select",
            "name": "对齐方式",
            "options": [
              {
                "name": "向左",
                "value": "left"
              },
              {
                "name": "居中",
                "value": "center"
              },
              {
                "name": "向右",
                "value": "right"
              }
            ],
            "default": "center",
            "show": [
              [
                "show",
                "$eq",
                true
              ]
            ],
            "handler": "updateDescription"
          },
          "horpos": {
            "type": "select",
            "name": "标题垂直位置",
            "options": [
              {
                "name": "顶部",
                "value": "top"
              },
              {
                "name": "底部",
                "value": "bottom"
              }
            ],
            "default": "top",
            "show": [
              [
                "show",
                "$eq",
                true
              ]
            ],
            "handler": "updateDescription"
          }
        }
      },
      "series": {
        "fold": true,
        "type": "array",
        "name": "图片系列",
        "default": [
          {
            "imgDesc": "这是第一张图片的描述",
            "imgUrl": {
              "value": "#00baff",
              "style": "image"
            },
            "imgLink": "link1"
          },
          {
            "imgDesc": "这是第二张图片的描述",
            "imgUrl": {
              "value": "#3de7c9",
              "style": "image"
            },
            "imgLink": "link2"
          },
          {
            "imgDesc": "这是第三张图片的描述",
            "imgUrl": {
              "value": "#ffffff",
              "style": "image"
            },
            "imgLink": "link3"
          }
        ],
        "child": {
          "type": "object",
          "name": "系列<%= i+1 %>",
          "child": {
            "imgDesc": {
              "name": "系列名",
              "type": "text",
              "default": ""
            },
            "imgUrl": {
              "name": "图片",
              "type": "image",
              "default": {
                "style": "single",
                "value": ""
              }
            },
            "imgLink": {
              "name": "图片超链接",
              "type": "text",
              "default": ""
            }
          }
        }
      }
    },
    "api_data": {
      "source": [
        {
          "description": "这是第一张图片的描述",
          "url": "https://img.alicdn.com/tps/TB1PH6EPXXXXXXbaFXXXXXXXXXX-4001-2251.png",
          "link": "http://www.w3school.com.cn/jquery/jquery_css.asp"
        },
        {
          "description": "这是第二张图片的描述",
          "url": "https://img.alicdn.com/tps/TB10kzBPXXXXXXaaFXXXXXXXXXX-4001-2251.png",
          "link": "https://segmentfault.com/q/1010000004327674"
        },
        {
          "description": "这是第三张图片的描述",
          "url": "https://img.alicdn.com/tps/TB1PH6EPXXXXXXbaFXXXXXXXXXX-4001-2251.png",
          "link": "https://segmentfault.com/q/1010000004327674"
        }
      ]
    }
  },
  "devDependencies": {
    "swiper": "^4.5.0"
  }
}